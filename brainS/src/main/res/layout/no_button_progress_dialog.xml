<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_no_button_progress_dialog"
    android:layout_width="280dp"
    android:layout_height="167dp"
    android:background="@drawable/no_button_dialog_background_c">

    <TextView
        android:id="@+id/tv_no_button_progress_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="15dp"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:gravity="center" />

    <com.abilix.brain.utils.MySeekBar
        android:id="@+id/progressbar_no_button_progress_dialog"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="15dp"
        android:max="100"
        android:progressDrawable="@drawable/progress_background_c"
        android:thumb="@drawable/progress_thumb_c"
        android:thumbOffset="10dp"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/tv_no_button_progress_dialog_message"
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:layout_below="@id/tv_no_button_progress_dialog_title"
        android:layout_above="@id/progressbar_no_button_progress_dialog"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
